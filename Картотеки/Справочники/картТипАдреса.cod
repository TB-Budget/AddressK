class inherited Базовый.Справочники.картТипАдреса "Тип адреса";

inobject private

  proc шаблон_ПриОткрытии (Create: logical);
    inherited шаблон_ПриОткрытии(Create);
    Self.Template.HelpContext = 'АдресК.АдресК.ТипАдреса.htm';
  end;

  proc ДобавитьСтолбцы;
    if (SearchInArray(ДобавочныеСтолбцыПараметры, 'ДляФизлиц', [1], False) < 0):
      ДобавочныеСтолбцыПараметры[LengthOfArray(ДобавочныеСтолбцыПараметры) + 1] = ['ДляФизлиц', 'Для физлиц', 100, Kernel.Template.CenterAlign, true, nil, Cardfile.LogicalFormat];
    fi;
    if (SearchInArray(ДобавочныеСтолбцыПараметры, 'ДляКонтрагентов', [1], False) < 0):
      ДобавочныеСтолбцыПараметры[LengthOfArray(ДобавочныеСтолбцыПараметры) + 1] = ['ДляКонтрагентов', 'Для контрагентов', 100, Kernel.Template.CenterAlign, true, nil, Cardfile.LogicalFormat];
    fi;
    if (SearchInArray(ДобавочныеСтолбцыПараметры, 'Номер', [1], False) < 0):
      ДобавочныеСтолбцыПараметры[LengthOfArray(ДобавочныеСтолбцыПараметры) + 1] = ['Номер', 'Порядок вывода', 100, Kernel.Template.CenterAlign, true, nil, Cardfile.NumericFormat];
    fi;
    inherited ДобавитьСтолбцы;
  end;


end